# Database
DATABASE_URL="postgresql://teamlog:teamlog_dev_password@localhost:5432/teamlog?schema=public"

# JWT
# IMPORTANT: JWT_SECRET must be at least 32 characters and contain at least 3 of:
#   - lowercase letters (a-z)
#   - uppercase letters (A-Z)
#   - numbers (0-9)
#   - special characters (@$!%*?&-_=+#^~)
# Generate a strong secret with: openssl rand -base64 48
JWT_SECRET="CHANGE-THIS-TO-A-STRONG-SECRET-WITH-At-Least-32-Chars!@#$"
JWT_EXPIRATION="7d"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-oauth-app-client-id"
GITHUB_CLIENT_SECRET="your-github-oauth-app-client-secret"
GITHUB_CALLBACK_URL="http://localhost:3000/auth/github/callback"

# Server
PORT=3000
NODE_ENV=development
# Comma-separated list of allowed origins.
# For vscode-webview, use specific extension IDs instead of wildcards
# Example: vscode-webview://YOUR_EXTENSION_ID
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# Comma-separated list of allowed VS Code extension IDs (optional)
# Only these extension IDs will be allowed to access the API via vscode-webview://
# Leave empty or comment out to disallow all vscode-webview origins
# Example: ALLOWED_VSCODE_EXTENSIONS="extension-id-1,extension-id-2"
ALLOWED_VSCODE_EXTENSIONS=""

# Yjs WebSocket
YJS_PORT=1234
